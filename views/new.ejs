<%- include('partials/header') %>
	<div class="ui main text container segment">
		<h1 class="ui header large"> Add a new blog</h1>
		<form class='ui form' action="/blogs" method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" placeholder="Add title">
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" name="blog[image]" placeholder="Add image">
			</div>
			<div class="field">
				<textarea type="text" name="blog[body]" placeholder="Write your blog" required></textarea>
			</div>
			<button class="ui orange big button" type="submit">Submit</button>
		</form>
	</div>	
<%- include('partials/footer') %>
