<%- include('partials/header') %>
	<div class="ui main text container segment">
		<h1 class="ui header large"> Edit <%= blog.title %></h1>
		<form class='ui form' action='/blogs/<%= blog._id %>?_method=PUT' method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" value="<%= blog.title%>">
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" name="blog[image]" value="<%= blog.image%>">
			</div>
			<div class="field">
				<textarea type="text" name="blog[body]" required><%= blog.body%></textarea>
			</div>
			<button class="ui orange big button" type="submit">Submit</button>
			<a class="ui grey big button" href="/blogs/<%= blog._id%>" >Cancel</a>
		</form>
	</div>	
<%- include('partials/footer') %>