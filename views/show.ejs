<%- include('partials/header') %>
	<div class="ui main text container segment">
		<h1> <%= blog.title%></h1>
		<img class="ui fluid centered rounded image" src="<%= blog.image %>">
		<div class="ui items">
			<div class="item">
				<div class="meta">
					<span><%=blog.created.toDateString() %></span>
				</div>
			</div>
		</div>
		<div class="description">
			<p><%- blog.body%></p>	
		</div>
		<br>
		<br>
		<form action="/blogs/<%=blog._id%>?_method=DELETE" method='POST' id="delete">
			<input value="Delete"  type="submit" class="ui red big button">
		</form>
		<a href="/blogs/<%= blog._id%>/edit" class="ui big button">
			Edit
		</a>
	</div>


<%- include('partials/footer') %>
